{
  "name": "weather-pwa",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "standard",
    "lint:css": "sass-lint -v -q",
    "lint:fix": "standard --fix",
    "build:images": "cp -r src/client/images build/public",
    "build:css": "node-sass src/client/styles/pages -o build/public/css --output-style compressed",
    "build:app": "webpack",
    "build:server": "babel src -d lib --copy-files --ignore src/client",
    "build:sw": "workbox generateSW workbox.config.js",
    "watch:css": "npm run build:css && node-sass src/client/styles/pages -wro build/public/css;",
    "watch:app": "webpack --watch",
    "watch:server": "nodemon --watch src --ignore src/client --exec 'npm run build:server && node ./lib/index.js'",
    "prebuild": "rm -rf ./build ./lib",
    "prewatch": "npm run prebuild",
    "build": "npm run build:server && npm run build:app && npm run build:css && npm run build:images && npm run build:sw",
    "watch": "npm run watch:css & npm run watch:app & npm run watch:server",
    "start": "node ./lib/index.js",
    "debug": "npm run build && node --inspect ./lib/index.js"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "ecstatic": "^3.0.0",
    "express": "^4.15.4",
    "history": "^4.7.2",
    "lodash": "^4.17.5",
    "qs": "^6.5.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "react-scripts": "1.1.1",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "5.0.0-alpha.9",
    "react-sparklines": "^1.7.0",
    "redux": "^3.7.2",
    "redux-promise": "^0.5.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.40",
    "@babel/core": "^7.0.0-beta.40",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "@babel/preset-react": "^7.0.0-beta.40",
    "babel-loader": "^8.0.0-beta.2",
    "lighthouse": "^2.9.1",
    "node-sass": "^4.7.2",
    "nodemon": "^1.17.1",
    "sass-lint": "^1.12.1",
    "standard": "^11.0.0",
    "uglifyjs-webpack-plugin": "^1.2.3",
    "webpack": "^3.5.5",
    "webpack-merge": "^4.1.2",
    "workbox-cli": "^3.0.0-beta.2"
  }
}
